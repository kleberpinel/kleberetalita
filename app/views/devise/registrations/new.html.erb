
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class=> "comment-form"}) do |f| %>
 
 <%= devise_error_messages! %>

  <table align="center" style="text-align: center">
  	<tr>
		<td colspan="2">
			<h2>Sign up</h2>
		</td>
	</tr>
	<tr>
		<td width="200px"><%= f.label :email %></td>
		<td><%= f.email_field :email%></td>
	</tr>
	<tr>
		<td> <%= f.label :password %></td>
		<td> <%= f.password_field :password%></td>
	</tr>

	<tr>
		<td> <%= f.label :password_confirmation %></td>
		<td> <%= f.password_field :password_confirmation%></td>
	</tr>
	<tr>
		<td colspan="2">
			<%= f.submit "Sign up", :class => "button blue"%>
		</td>
	</tr>
	<tr>
		<td>&nbsp;</td>
		<td>
			<%= render "links" %>
		</td>
	</tr>
</table>
  
<% end %>