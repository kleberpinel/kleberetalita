<!DOCTYPE html>

<html lang="pt">
<head>
       <meta charset="utf-8"/>
       <title><%= content_for?(:title) ? yield(:title) : "Kleber e Talita" %></title>
       



<!-- STYLESHEET -->
<%= stylesheet_link_tag    "application" %>
<%= javascript_include_tag "application" %>

        <%= csrf_meta_tag %>
       <%= yield(:head) %>
</head>
<body>

  <div class="main">
    <%= content_tag :h1, yield(:title) if show_title? %>
    
      <h1>Listando fotos</h1>
      <br/>
      <table class="table table-bordered">
        <tr>
          <th></th>
          <th>Nome</th>
          <th>Descricao</th>
          <th>Foto</th>
        </tr>
      <% @fotos.each do |foto| %>
        <tr>
          <td><%= check_box( "", "", {:id=> "foto#{foto.id}", :name=> "#{foto.id}-https://s3.amazonaws.com/rails_s3/#{foto.picture}"}) %></td>
          <td><%= foto.nome %></td>
          <td><%= foto.descricao %></td>
          <td style="text-align: center;"><a href="<%= "https://s3.amazonaws.com/rails_s3/#{foto.picture}" %>" class="img fancybox"><%= image_tag  "https://s3.amazonaws.com/rails_s3/#{foto.picture}", :width => "100" %></a></td>
        </tr>

        <script type="text/javascript">
            $('#<%= "foto#{foto.id}" %>').click(function() {
              if($(this).attr("checked") == "checked"){
                window.parent.addFoto($(this));
              } else {
                window.parent.removeFoto($(this));
              }
            })
        </script>


      <% end %>
      </table>

      <br />
  </div> 
</body>
</html>





